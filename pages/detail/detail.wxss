page {
  background-color: #000;
}

.parent {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wallpaper {
  width: 100%;
  background-color: #000;
}

.image-button {
  display: flex;
  border-color: #fff;
  border-width: 5rpx;
  border-style: solid;
  border-radius: 5rpx;
  width: 400rpx;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}

.image-text {
  color: #fff;
  font-size: 25rpx;  
  margin-right: 20rpx;
}

.button-image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 40rpx
}
