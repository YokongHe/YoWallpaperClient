/* pages/detail/detail.wxss */

page {
  background-color: #000;
}

.parent {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wallpaper {
  width: 100%;
  background-color: #000;
}

.image-button {
  display: flex;
  border-color: #fff;
  border-width: 5rpx;
  border-style: solid;
  border-radius: 5rpx;
  width: 400rpx;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}

.image-text {
  color: #fff;
  font-size: 25rpx;
  margin-right: 20rpx;
}

.button-image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 40rpx;
}

.dialog {
  display: flex;
  width: 85%;
  position: fixed;
  bottom: 20rpx;
  border-radius: 100rpx;
  background: #FFFFFF;
  opacity: 0.8;
  justify-content: center;
  flex-direction: column;
}

.dialog-text {
  margin-top: 32rpx;
  margin-left: 74rpx;
  margin-right: 74rpx;
  color: #333333;
  font-size: 20rpx;
}

.dialog-ok {
  color: #003ED9;
  font-size: 20rpx;
  text-decoration-line: underline;
  text-align: end;
  margin-right: 54rpx;
  padding-top: 12rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
}
